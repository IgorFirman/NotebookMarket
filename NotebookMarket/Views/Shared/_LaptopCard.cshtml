@model Laptop
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <a asp-controller="Laptop" asp-action="Details" asp-route-id="@Model.LaptopId"><img class="center-img" src="@Model.ImageUrl" alt=""></a>
        <div class="caption">
            <h4>@Model.Price.ToString("#.##") грн.</h4>
            <h5>
                <a asp-controller="Laptop"
                   asp-action="Details"
                   asp-route-id="@Model.LaptopId">@Model.Model</a>
            </h5>
            <p class="size-14">@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.LaptopId">Додати до замовлення</a>
            </p>
        </div>
    </div>
</div>